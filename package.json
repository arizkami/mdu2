{
  "name": "mdunew",
  "version": "1.0.0",
  "description": "Modern Media Downloader with CLI and GUI",
  "main": "dist/gui/main/index.js",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "electron .",
    "build": "tsc && vite build",
    "build:main": "tsc",
    "build:renderer": "vite build",
    "cli": "tsx src/cli/index.ts",
    "start": "electron dist/gui/main/index.js",
    "test": "bun run test.ts",
    "test:cli": "bun mdu.ts --help && bun mdu.ts list-extractors",
    "typecheck": "tsc --noEmit",
    "build:cli": "bun build src/cli/index.ts --outdir dist --target bun"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "@types/yargs": "^17.0.0",
    "electron": "^37.2.6",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.1.1",
    "vite-plugin-solid": "^2.11.8"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "@types/fluent-ffmpeg": "^2.1.27",
    "axios": "^1.6.0",
    "commander": "^11.0.0",
    "fluent-ffmpeg": "^2.1.3",
    "solid-js": "^1.8.0",
    "tailwindcss": "^4.1.11",
    "yargs": "^17.7.0"
  }
}
